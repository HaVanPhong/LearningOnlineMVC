<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
/>
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css?family=Bitter:400,700"
/>
<link rel="stylesheet" href="css/header.css" />

<%- include('../partials/dialogadd.ejs')%>

<div>
  <div class="header-dark">
    <nav class="navbar navbar-dark navbar-expand-md navigation-clean-search">
      <div class="container">
        <a class="navbar-brand" href="#">Learning Online</a
        ><button
          class="navbar-toggler"
          data-toggle="collapse"
          data-target="#navcol-1"
        >
          <span class="sr-only">Toggle navigation</span
          ><span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navcol-1">
          <ul class="nav navbar-nav">
            <li class="nav-item" role="presentation">
              <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" href="#khoahoc">Course</a>
            </li>
            <li class="dropdown">
              <a
                class="dropdown-toggle1 nav-link dropdown-toggle"
                data-toggle="dropdown"
                aria-expanded="false"
                href="#"
                >Admin
              </a>
              <div class="dropdown-menu1" role="menu1">
                <a class="dropdown-item1" role="presentation"
                  ><button id="launch-dialog" style="width: 160px; height: 20px; line-height: 20px;">Create Course</button></a
                >
                <a class="dropdown-item1" role="presentation" href="/course"
                  ><button id="launch-dialog" style="width: 160px; height: 20px; line-height: 20px;">Coure Manager</button></a
                >
              </div>
            </li>
          </ul>
          <form class="form-inline mr-auto" target="_self" >
            <div class="form-group">
              <label for="search-field"><i class="fa fa-search"></i></label
              ><input
                class="form-control search-field"
                type="search"
                name="search"
                id="search-field"
              />
            </div>
          </form>
          <% if (user) { %>
          <div style="display: flex; align-items: center">
            <i class="fas fa-user"></i>
            <h4 style="margin-left: 10px; margin-right: 30px">
              <%= user.username %>
            </h4>
          </div>
          <a class="btn btn-light action-button" role="button" href="/"
            >logout</a
          >
          <% }else { %>
          <span class="navbar-text"
            ><a href="/" class="login btn btn-light action-button"
              >Log In</a
            ></span
          >
          <a class="btn btn-light action-button" role="button" href="/sigup"
            >Sign Up</a
          >
          <% } %>
        </div>
      </div>
    </nav>
    <% if(!hiden) {%>
      <div class="container hero" style="margin-top: 50px;">
        <div class="row">
          <div class="col-md-8 offset-md-2">
            <h1 class="text-center">Happy learning</h1>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe
                width="560"
                height="315"
                src="https://www.youtube.com/embed/4DrH_OlzY5I"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>

<script>
  const template = document.getElementById("dialog-template");

  document.body.appendChild(document.importNode(template.content, true));
</script>
